func test():
	test_0xe6_inc_zeropage_increase_memory_value()
	test_0xf6_inc_zeropage_x_increase_memory_value()
	test_0xee_inc_absolute_increase_memory_value()
	test_0xfe_inc_absolute_x_increase_memory_value()


func test_0xe6_inc_zeropage_increase_memory_value():
	var cpu = CPU6502.new()
	cpu.memory.mem_write(0x03, 0x09)
	cpu.memory.mem_write(0x04, 0xFF)
	cpu.memory.mem_write(0x05, 0xFF)
	cpu.memory.mem_write(0x06, 0b01111111)
	cpu.load_and_run([0xe6, 0x03, 0x00])
	assert(cpu.memory.mem_read(0x03) == 0x0A)
	assert(cpu.flags.Z.value == false)
	assert(cpu.flags.N.value == false)
	cpu.load_and_run([0xe6, 0x04, 0x00])
	assert(cpu.memory.mem_read(0x04) == 0x00)
	assert(cpu.flags.Z.value == true)
	assert(cpu.flags.N.value == false)
	cpu.load_and_run([0xe6, 0x05, 0xe6, 0x05, 0x00])
	assert(cpu.memory.mem_read(0x05) == 0x01)
	assert(cpu.flags.Z.value == false)
	assert(cpu.flags.N.value == false)
	cpu.load_and_run([0xe6, 0x06, 0x00])
	assert(cpu.memory.mem_read(0x06) ==  0b10000000)
	assert(cpu.flags.Z.value == false)
	assert(cpu.flags.N.value == true)
	print("test_0xe6_inc_zeropage_increase_memory_value PASSED!")


